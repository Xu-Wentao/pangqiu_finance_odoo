<odoo>
    <data>
        <record model="ir.ui.view" id="orders_alipay_tree">
            <field name="name">支付宝订单</field>
            <field name="model">yc.orders_alipay</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="alipay_no"/>
                    <field name="pay_account"/>
                    <field name="channel_no"/>
                    <field name="price"/>
                    <field name="order_price_sum"/>
                    <field name="time"/>
                    <field name="remark"/>
                    <field name="checked"/>
                    <field name="diff"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="orders_alipay_form">
            <field name="name">支付宝订单</field>
            <field name="model">yc.orders_alipay</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="checked"/>
                            <field name="diff"
                                   attrs="{'invisible':[('checked','=',False)]}"/>
                            <field name="alipay_no"/>
                            <field name="pay_account"/>
                            <field name="channel_no"/>
                            <field name="price"/>
                            <field name="order_price_sum"/>
                            <field name="time"/>
                            <field name="order_ids"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="orders_alipay_action">
            <field name="name">支付宝订单</field>
            <field name="res_model">yc.orders_alipay</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_check_orders" model="ir.actions.server">
            <field name="name">核对订单</field>
            <field name="model_id" ref="model_yc_orders_alipay"/>
            <field name="binding_model_id" ref="model_yc_orders_alipay"/>
            <field name="state">code</field>
            <field name="code">
                action = records.check()
            </field>
        </record>

    </data>
</odoo>
